@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Products</h1>
    <table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Category</th>
            <th>Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model.Products)
        {
            <tr>
                <td>@r.Id</td>
                <td>@r.ProductName</td>
                <td>@r.Category</td>
                <td>@r.Price</td>
            </tr>
        }
    </tbody>
</table>
</div>
